pipeline {
    agent any

    stages {

        stage('Build') {
            steps {
                sh 'chmod +x build.sh'
                sh './build.sh'
            }
        }

        stage('Push dev') {
            when {
                branch 'dev'
            }
            steps {
                sh '''
                docker login -u raghul2904 -p dckr_pat_TKxntUEdh2u3Rx-xdu5fDBhncVY
                docker tag react-app raghul2904/react-app-dev:latest
                docker push raghul2904/react-app-dev:latest
                '''
            }
        }

        stage('Push prod') {
            when {
                branch 'main'
            }
            steps {
                sh '''
                docker login -u raghul2904 -p dckr_pat_TKxntUEdh2u3Rx-xdu5fDBhncVY
                docker tag react-app raghul2904/react-app-prod:latest
                docker push raghul2904/react-app-prod:latest
                '''
            }
        }

        stage('Deploy') {
            steps {
                sh 'chmod +x deploy.sh'
                sh './deploy.sh'
            }
        }
    }
}
